.list_item{
  display: flex;
  flex-direction:column;
  border-bottom: 10px solid #EEF0F4;
}
.news_title{
  font-size: 18px;
  padding:0px 8px 8px 8px;
}
.comments_head{
  width: 750rpx; 
  height: 60rpx; 
  padding: 0px 8px;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #EEF0F4;
  border-top: 1px solid #EEF0F4;
}
.comments_head_text{
  font-size: 16px;
}
.comments_box{
  width: 750rpx; 
  padding: 8px 18px;
  display: flex;
  flex-direction:column;
  align-items: flex-start;
  border-bottom: 1px solid #EEF0F4;
}
.comments_user{
  display: flex;
  align-items: center;
}
.comments_nickname{
  font-size: 12px;
  color: #B4B4B4;
}
.comments_avatar{
  width: 32rpx;
  height: 32rpx;
  margin-right: 6px;
  border-radius: 50%;
}
.comments_content_box{
  width: 650rpx;
}
.comments_content{
  font-size: 12px;
  padding:0px 18px;
}
